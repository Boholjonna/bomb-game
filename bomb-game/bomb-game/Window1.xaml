<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="bomb_game.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="DIFFUSE THE BOMB BY Jonna Bohol"
	Width="1026"
	Height="710.5">
	<Window.Resources>
		<!-- Animation Storyboards -->
		<Storyboard x:Key="ExplosionAnimation">
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Width" 
						   From="0" To="400" 
						   Duration="0:0:0.5" />
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Height" 
						   From="0" To="400" 
						   Duration="0:0:0.5" />
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Opacity" 
						   From="0" To="1" 
						   Duration="0:0:0.2" />
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Opacity" 
						   From="1" To="0" 
						   Duration="0:0:0.3" 
						   BeginTime="0:0:0.2" />
		</Storyboard>
		
		<Storyboard x:Key="BombShakeAnimation">
			<DoubleAnimation Storyboard.TargetName="PlayPanel" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
						   From="0" To="10" 
						   Duration="0:0:0.1" 
						   AutoReverse="True" 
						   RepeatBehavior="3x" />
			<DoubleAnimation Storyboard.TargetName="PlayPanel" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
						   From="0" To="5" 
						   Duration="0:0:0.1" 
						   AutoReverse="True" 
						   RepeatBehavior="3x" />
		</Storyboard>
		
		<Storyboard x:Key="WirePulseAnimation">
			<DoubleAnimation Storyboard.TargetName="StatusText" 
						   Storyboard.TargetProperty="FontSize" 
						   From="18" To="22" 
						   Duration="0:0:0.3" 
						   AutoReverse="True" 
						   RepeatBehavior="2x" />
		</Storyboard>
		
		<Storyboard x:Key="SuccessAnimation">
			<DoubleAnimation Storyboard.TargetName="StatusText" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
						   From="1" To="1.5" 
						   Duration="0:0:0.3" 
						   AutoReverse="True" />
			<DoubleAnimation Storyboard.TargetName="StatusText" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
						   From="1" To="1.5" 
						   Duration="0:0:0.3" 
						   AutoReverse="True" />
			<ColorAnimation Storyboard.TargetName="StatusText" 
						Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
						From="#FF00FF00" To="#FFFFFF00" 
						Duration="0:0:0.5" />
		</Storyboard>
		
		<!-- Main Menu Button Style -->
		<Style x:Key="MainMenuButtonStyle" TargetType="Button">
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontSize" Value="30"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="Background" Value="#FFF30000"/>
			<Setter Property="BorderThickness" Value="8,8,8,8"/>
			<Setter Property="BorderBrush" Value="#FFFFFFFF"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCC0000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FFCCCCCC"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<!-- Wire Button Styles -->
		<Style x:Key="RedWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFFF0000"/>
			<Setter Property="BorderBrush" Value="#FF8B0000"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCC0000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF660000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="GreenWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF00FF00"/>
			<Setter Property="BorderBrush" Value="#FF006400"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FF00CC00"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF004400"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="BlueWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF0000FF"/>
			<Setter Property="BorderBrush" Value="#FF000080"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FF0000CC"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF000060"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="YellowWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFFFFF00"/>
			<Setter Property="BorderBrush" Value="#FF808000"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCCCC00"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF606000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="PurpleWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFFF00FF"/>
			<Setter Property="BorderBrush" Value="#FF800080"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCC00CC"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF600060"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<!-- Game Over Button Style -->
		<Style x:Key="GameOverButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF333333"/>
			<Setter Property="BorderBrush" Value="#FF666666"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="10">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#16cc00"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FFAAAAAA"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- Try Again Button Style -->
		<Style x:Key="TryAgainButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF333333"/>
			<Setter Property="BorderBrush" Value="#FF666666"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="10">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#16cc00"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FFAAAAAA"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- Back to Menu Button Style -->
		<Style x:Key="BackToMenuButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF333333"/>
			<Setter Property="BorderBrush" Value="#FF666666"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="10">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#f30000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FFAAAAAA"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		<!-- Back Button Style -->
		<Style x:Key="BackButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF333333"/>
			<Setter Property="BorderBrush" Value="#FF666666"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#8a0000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#aa0000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="pack://application:,,,/images/home.gif"
					   Stretch="UniformToFill" />
		</Grid.Background>
		<!-- Main Menu Panel -->
		<Grid
			x:Name="MainMenuPanel"
			Visibility="Visible">
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="DIFFUSE THE BOMB"
					FontSize="50"
					FontWeight="Bold"
					FontFamily="Gill Sans"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Margin="0,0,0,50"
					Background="#00FFFFFF"
					Foreground="#FFFFFFFF" />
				<Button
					Content="PLAY"
					FontWeight="Bold"
					FontSize="30"
					Foreground="#FFFFFFFF"
					Background="#FFF30000"
					BorderThickness="8,8,8,8"
					BorderBrush="#FFFFFFFF"
					x:Name="play_button"
					Click="play_button_Click"
					Style="{StaticResource MainMenuButtonStyle}"
					HorizontalAlignment="Center"
					Margin="0,0,0,20"
					Width="228"
					Height="71.5" />
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="0,0,0,20">
					<Button
						Content="SETTINGS"
						FontWeight="Bold"
						FontSize="30"
						Foreground="#FFFFFFFF"
						Background="#FFF30000"
						BorderThickness="8,8,8,8"
						BorderBrush="#FFFFFFFF"
						x:Name="settings_button"
						Click="settings_button_Click"
						Style="{StaticResource MainMenuButtonStyle}"
						Width="228"
						Height="71.5"
						Margin="0,0,20,0" />
					<Button
						Content="ABOUT"
						FontWeight="Bold"
						FontSize="30"
						Foreground="#FFFFFFFF"
						Background="#FFF30000"
						BorderThickness="8,8,8,8"
						BorderBrush="#FFFFFFFF"
						x:Name="about_button"
						Click="about_button_Click"
						Style="{StaticResource MainMenuButtonStyle}"
						Width="228"
						Height="71.5" />
				</StackPanel>
				<Button
					Content="HELP"
					FontWeight="Bold"
					FontSize="30"
					Foreground="#FFFFFFFF"
					Background="#FFF30000"
					BorderThickness="8,8,8,8"
					BorderBrush="#FFFFFFFF"
					x:Name="help_button"
					Click="help_button_Click"
					Style="{StaticResource MainMenuButtonStyle}"
					HorizontalAlignment="Center"
					Width="228"
					Height="71.5" />
			</StackPanel>
		</Grid>
		<!-- Play Panel -->
		<Grid
			x:Name="PlayPanel"
			Visibility="Collapsed">
			<Grid.Background>
				<ImageBrush
					ImageSource="pack://application:,,,/images/play.jfif"
					Stretch="UniformToFill" />
			</Grid.Background>
			<Grid.RenderTransform>
				<TransformGroup>
					<TranslateTransform x:Name="PlayPanelTransform" X="0" Y="0"/>
				</TransformGroup>
			</Grid.RenderTransform>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="BOMB DEFUSAL"
					FontSize="40"
					FontWeight="Bold"
					Foreground="#FFF30000"
					HorizontalAlignment="Center"
					Margin="0,0,0,30" />
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="0,0,0,20">
					<TextBlock
						x:Name="AttemptsText"
						Text="Score: 0"
						FontSize="25"
						FontWeight="Bold"
						Foreground="White"
						FontFamily="Arial Black"
						Margin="0,0,20,0" />
					<TextBlock
						x:Name="StatusText"
						Text="Choose a wire to cut..."
						FontSize="25"
						FontWeight="Bold"
						Foreground="#FF00FF00"
						FontFamily="Arial Black"
						HorizontalAlignment="Center"
						Margin="20,0,0,0">
						<TextBlock.RenderTransform>
							<TransformGroup>
								<ScaleTransform x:Name="StatusTextScale" ScaleX="1" ScaleY="1"/>
							</TransformGroup>
						</TextBlock.RenderTransform>
					</TextBlock>
				</StackPanel>
				<!-- Explosion Container (Initially Hidden) -->
				<Grid x:Name="ExplosionContainer"
					  Visibility="Collapsed"
					  HorizontalAlignment="Center"
					  VerticalAlignment="Center"
					  Margin="0,0,0,30">
					<Image x:Name="ExplosionImage"
						   Source="pack://application:,,,/images/explode.gif"
						   Width="400"
						   Height="400"
						   Opacity="1"
						   HorizontalAlignment="Center"
						   VerticalAlignment="Center" />
				</Grid>
				<!-- Animated Circular Bomb -->
				<Grid
					x:Name="BombContainer"
					Width="400"
					Height="400"
					Margin="0,0,0,30"
					HorizontalAlignment="Center"
					RenderTransformOrigin="0.5,0.5">
					<Grid.RenderTransform>
						<TransformGroup>
							<RotateTransform x:Name="BombRotation" Angle="0" />
						</TransformGroup>
					</Grid.RenderTransform>
					<Grid.Triggers>
						<EventTrigger RoutedEvent="Loaded">
							<BeginStoryboard>
								<Storyboard
									RepeatBehavior="Forever">
									<DoubleAnimation
										Storyboard.TargetName="BombRotation"
										Storyboard.TargetProperty="Angle"
										From="0"
										To="360"
										Duration="0:0:10" />
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
					</Grid.Triggers>
					<!-- Outer Bomb Circle -->
					<Ellipse
						x:Name="BombCircle"
						Width="400"
						Height="400"
						Fill="#2C2C2C"
						Stroke="#FF0000"
						StrokeThickness="8"
						HorizontalAlignment="Center"
						VerticalAlignment="Center">
						<Ellipse.Effect>
							<DropShadowEffect
								BlurRadius="15"
								ShadowDepth="5"
								Color="#FF0000"
								Opacity="0.8" />
						</Ellipse.Effect>
						<Ellipse.Triggers>
							<EventTrigger RoutedEvent="Loaded">
								<BeginStoryboard>
									<Storyboard
										RepeatBehavior="Forever"
										AutoReverse="True">
										<ColorAnimation
											Storyboard.TargetProperty="(Ellipse.Stroke).(SolidColorBrush.Color)"
											From="#FF0000"
											To="#FF6666"
											Duration="0:0:1" />
									</Storyboard>
								</BeginStoryboard>
							</EventTrigger>
						</Ellipse.Triggers>
					</Ellipse>
					<!-- Inner Bomb Circle -->
					<Ellipse
						Width="350"
						Height="350"
						Fill="#1A1A1A"
						Stroke="#444444"
						StrokeThickness="4"
						HorizontalAlignment="Center"
						VerticalAlignment="Center" />
					<!-- Center Display -->
					<StackPanel
						HorizontalAlignment="Center"
						VerticalAlignment="Center">
					</StackPanel>
					<!-- Wire Circles positioned around the bomb -->
					<Button
						x:Name="Wire1"
						Width="60"
						Height="60"
						Click="Wire_Click"
						Style="{StaticResource RedWireStyle}"
						HorizontalAlignment="Center"
						VerticalAlignment="Top"
						Margin="0,40,0,0"
						Background="Transparent"
						BorderThickness="0"
						Padding="0">
						<Ellipse
							Width="60"
							Height="60"
							Fill="#CC0000"
							Stroke="#FF6666"
							StrokeThickness="3" />
					</Button>
					<Button
						x:Name="Wire2"
						Width="60"
						Height="60"
						Click="Wire_Click"
						Style="{StaticResource GreenWireStyle}"
						HorizontalAlignment="Right"
						VerticalAlignment="Center"
						Margin="0,0,40,0"
						Background="Transparent"
						BorderThickness="0"
						Padding="0">
						<Ellipse
							Width="60"
							Height="60"
							Fill="#00CC00"
							Stroke="#66FF66"
							StrokeThickness="3" />
					</Button>
					<Button
						x:Name="Wire3"
						Width="60"
						Height="60"
						Click="Wire_Click"
						Style="{StaticResource BlueWireStyle}"
						HorizontalAlignment="Center"
						VerticalAlignment="Bottom"
						Margin="0,0,0,40"
						Background="Transparent"
						BorderThickness="0"
						Padding="0">
						<Ellipse
							Width="60"
							Height="60"
							Fill="#0066CC"
							Stroke="#6699FF"
							StrokeThickness="3" />
					</Button>
					<Button
						x:Name="Wire4"
						Width="60"
						Height="60"
						Click="Wire_Click"
						Style="{StaticResource YellowWireStyle}"
						HorizontalAlignment="Left"
						VerticalAlignment="Center"
						Margin="40,0,0,0"
						Background="Transparent"
						BorderThickness="0"
						Padding="0">
						<Ellipse
							Width="60"
							Height="60"
							Fill="#CCCC00"
							Stroke="#FFFF66"
							StrokeThickness="3" />
					</Button>
				</Grid>
				<!-- Game Over Buttons (Initially Hidden) -->
				<StackPanel
					x:Name="GameOverButtons"
					Orientation="Vertical"
					HorizontalAlignment="Center"
					Visibility="Collapsed"
					Margin="0,20,0,0">
					<Button
						x:Name="TryAgainButton"
						Content="TRY AGAIN"
						Width="150"
						Height="50"
						Background="#006400"
						BorderBrush="#90EE90"
						Foreground="White"
						FontSize="16"
						FontWeight="Bold"
						Margin="0,0,0,10"
						Style="{StaticResource TryAgainButtonStyle}"
						Click="TryAgain_Click" />
					<Button
						x:Name="BackToMenuFromGameButton"
						Content="BACK TO MENU"
						Width="150"
						Height="50"
						Background="#b10000"
						BorderBrush="#ff9999"
						Foreground="White"
						FontSize="16"
						FontWeight="Bold"
						Margin="0,0,0,0"
						Style="{StaticResource BackToMenuButtonStyle}"
						Click="BackToMenu_Click" />
				</StackPanel>
			</StackPanel>
		</Grid>
		<!-- Settings Panel -->
		<Grid
			x:Name="SettingsPanel"
			Visibility="Collapsed">
			<Grid.Background>
				<ImageBrush
					ImageSource="pack://application:,,,/images/setttings.jpg"
					Stretch="UniformToFill" />
			</Grid.Background>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="SETTINGS"
					FontSize="40"
					FontWeight="Bold"
					Foreground="White"
					HorizontalAlignment="Center"
					Margin="0,0,0,50" />
				<Border
					Background="#b80505"
					CornerRadius="10"
					Padding="20"
					Margin="0,0,0,30">
					<StackPanel>
						<TextBlock
							Text="Difficulty"
							FontSize="20"
							Foreground="White"
							Margin="0,0,0,10" />
						<ComboBox
							x:Name="DifficultyComboBox"
							Width="200"
							Height="40"
							FontSize="16">
							<ComboBoxItem
								Content="Easy" />
							<ComboBoxItem
								Content="Medium" />
							<ComboBoxItem
								Content="Hard"
