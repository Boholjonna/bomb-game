<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="bomb_game.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="DIFFUSE THE BOMB BY Jonna Bohol"
	Width="1026"
	Height="710.5">
	<Window.Resources>
		<!-- Animation Storyboards -->
		<Storyboard x:Key="ExplosionAnimation">
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Width" 
						   From="0" To="400" 
						   Duration="0:0:0.5" />
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Height" 
						   From="0" To="400" 
						   Duration="0:0:0.5" />
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Opacity" 
						   From="0" To="1" 
						   Duration="0:0:0.2" />
			<DoubleAnimation Storyboard.TargetName="ExplosionImage" 
						   Storyboard.TargetProperty="Opacity" 
						   From="1" To="0" 
						   Duration="0:0:0.3" 
						   BeginTime="0:0:0.2" />
		</Storyboard>
		
		<Storyboard x:Key="BombShakeAnimation">
			<DoubleAnimation Storyboard.TargetName="PlayPanel" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
						   From="0" To="10" 
						   Duration="0:0:0.1" 
						   AutoReverse="True" 
						   RepeatBehavior="3x" />
			<DoubleAnimation Storyboard.TargetName="PlayPanel" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
						   From="0" To="5" 
						   Duration="0:0:0.1" 
						   AutoReverse="True" 
						   RepeatBehavior="3x" />
		</Storyboard>
		
		<Storyboard x:Key="WirePulseAnimation">
			<DoubleAnimation Storyboard.TargetName="StatusText" 
						   Storyboard.TargetProperty="FontSize" 
						   From="18" To="22" 
						   Duration="0:0:0.3" 
						   AutoReverse="True" 
						   RepeatBehavior="2x" />
		</Storyboard>
		
		<Storyboard x:Key="SuccessAnimation">
			<DoubleAnimation Storyboard.TargetName="StatusText" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
						   From="1" To="1.5" 
						   Duration="0:0:0.3" 
						   AutoReverse="True" />
			<DoubleAnimation Storyboard.TargetName="StatusText" 
						   Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
						   From="1" To="1.5" 
						   Duration="0:0:0.3" 
						   AutoReverse="True" />
			<ColorAnimation Storyboard.TargetName="StatusText" 
						Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" 
						From="#FF00FF00" To="#FFFFFF00" 
						Duration="0:0:0.5" />
		</Storyboard>
		
		<!-- Main Menu Button Style -->
		<Style x:Key="MainMenuButtonStyle" TargetType="Button">
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="FontSize" Value="30"/>
			<Setter Property="Foreground" Value="#FFFFFFFF"/>
			<Setter Property="Background" Value="#FFF30000"/>
			<Setter Property="BorderThickness" Value="8,8,8,8"/>
			<Setter Property="BorderBrush" Value="#FFFFFFFF"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCC0000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FFCCCCCC"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<!-- Wire Button Styles -->
		<Style x:Key="RedWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFFF0000"/>
			<Setter Property="BorderBrush" Value="#FF8B0000"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCC0000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF660000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="GreenWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF00FF00"/>
			<Setter Property="BorderBrush" Value="#FF006400"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FF00CC00"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF004400"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="BlueWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF0000FF"/>
			<Setter Property="BorderBrush" Value="#FF000080"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FF0000CC"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF000060"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="YellowWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFFFFF00"/>
			<Setter Property="BorderBrush" Value="#FF808000"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCCCC00"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF606000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<Style x:Key="PurpleWireStyle" TargetType="Button">
			<Setter Property="Background" Value="#FFFF00FF"/>
			<Setter Property="BorderBrush" Value="#FF800080"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#FFCC00CC"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#FF600060"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
		
		<!-- Back Button Style -->
		<Style x:Key="BackButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF333333"/>
			<Setter Property="BorderBrush" Value="#FF666666"/>
			<Setter Property="BorderThickness" Value="2"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border x:Name="border" 
								Background="{TemplateBinding Background}" 
								BorderBrush="{TemplateBinding BorderBrush}" 
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="border" Property="Background" Value="#8a0000"/>
								<Setter TargetName="border" Property="BorderBrush" Value="#aa0000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>
	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="pack://application:,,,/images/home.gif"
					   Stretch="UniformToFill" />
		</Grid.Background>
		<!-- Main Menu Panel -->
		<Grid
			x:Name="MainMenuPanel"
			Visibility="Visible">
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="DIFFUSE THE BOMB"
					FontSize="50"
					FontWeight="Bold"
					FontFamily="Gill Sans"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Margin="0,0,0,50"
					Background="#00FFFFFF"
					Foreground="#FFFFFFFF" />
				<Button
					Content="PLAY"
					FontWeight="Bold"
					FontSize="30"
					Foreground="#FFFFFFFF"
					Background="#FFF30000"
					BorderThickness="8,8,8,8"
					BorderBrush="#FFFFFFFF"
					x:Name="play_button"
					Click="play_button_Click"
					Style="{StaticResource MainMenuButtonStyle}"
					HorizontalAlignment="Center"
					Margin="0,0,0,20"
					Width="228"
					Height="71.5" />
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="0,0,0,20">
					<Button
						Content="SETTINGS"
						FontWeight="Bold"
						FontSize="30"
						Foreground="#FFFFFFFF"
						Background="#FFF30000"
						BorderThickness="8,8,8,8"
						BorderBrush="#FFFFFFFF"
						x:Name="settings_button"
						Click="settings_button_Click"
						Style="{StaticResource MainMenuButtonStyle}"
						Width="228"
						Height="71.5"
						Margin="0,0,20,0" />
					<Button
						Content="ABOUT"
						FontWeight="Bold"
						FontSize="30"
						Foreground="#FFFFFFFF"
						Background="#FFF30000"
						BorderThickness="8,8,8,8"
						BorderBrush="#FFFFFFFF"
						x:Name="about_button"
						Click="about_button_Click"
						Style="{StaticResource MainMenuButtonStyle}"
						Width="228"
						Height="71.5" />
				</StackPanel>
				<Button
					Content="HELP"
					FontWeight="Bold"
					FontSize="30"
					Foreground="#FFFFFFFF"
					Background="#FFF30000"
					BorderThickness="8,8,8,8"
					BorderBrush="#FFFFFFFF"
					x:Name="help_button"
					Click="help_button_Click"
					Style="{StaticResource MainMenuButtonStyle}"
					HorizontalAlignment="Center"
					Width="228"
					Height="71.5" />
			</StackPanel>
		</Grid>
		<!-- Play Panel -->
		<Grid
			x:Name="PlayPanel"
			Visibility="Collapsed">
			<Grid.Background>
				<ImageBrush
					ImageSource="pack://application:,,,/images/play.jfif"
					Stretch="UniformToFill" />
			</Grid.Background>
			<Grid.RenderTransform>
				<TransformGroup>
					<TranslateTransform x:Name="PlayPanelTransform" X="0" Y="0"/>
				</TransformGroup>
			</Grid.RenderTransform>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="BOMB DEFUSAL"
					FontSize="40"
					FontWeight="Bold"
					Foreground="#FFF30000"
					HorizontalAlignment="Center"
					Margin="0,0,0,30" />
				<StackPanel
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Margin="0,0,0,20">
					<TextBlock
						x:Name="AttemptsText"
						Text="Score: 0"
						FontSize="25"
						FontWeight="Bold"
						Foreground="White"
						FontFamily="Arial Black"
						Margin="0,0,20,0" />
					<TextBlock
						x:Name="StatusText"
						Text="Choose a wire to cut..."
						FontSize="25"
						FontWeight="Bold"
						Foreground="#FF00FF00"
						FontFamily="Arial Black"
						HorizontalAlignment="Center"
						Margin="20,0,0,0">
						<TextBlock.RenderTransform>
							<TransformGroup>
								<ScaleTransform x:Name="StatusTextScale" ScaleX="1" ScaleY="1"/>
							</TransformGroup>
						</TextBlock.RenderTransform>
					</TextBlock>
				</StackPanel>
				<!-- Explosion Image (Initially Hidden) -->
				<Image x:Name="ExplosionImage"
					   Source="pack://application:,,,/images/explode.gif"
					   Width="0"
					   Height="0"
					   Opacity="0"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Margin="0,0,0,30" />
				
				<!-- Wires -->
				<Grid
					Width="600"
					Height="300"
					Margin="0,0,0,30">
					<Grid.ColumnDefinitions>
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="*" />
						<ColumnDefinition
							Width="*" />
					</Grid.ColumnDefinitions>
					<Button
						x:Name="Wire1"
						Grid.Column="0"
						Content="RED"
						Click="Wire_Click"
						Style="{StaticResource RedWireStyle}" />
					<Button
						x:Name="Wire2"
						Grid.Column="1"
						Content="GREEN"
						Click="Wire_Click"
						Style="{StaticResource GreenWireStyle}" />
					<Button
						x:Name="Wire3"
						Grid.Column="2"
						Content="BLUE"
						Click="Wire_Click"
						Style="{StaticResource BlueWireStyle}" />
					<Button
						x:Name="Wire4"
						Grid.Column="3"
						Content="YELLOW"
						Click="Wire_Click"
						Style="{StaticResource YellowWireStyle}" />
					<Button
						x:Name="Wire5"
						Grid.Column="4"
						Content="PURPLE"
						Click="Wire_Click"
						Style="{StaticResource PurpleWireStyle}" />
				</Grid>
				<!-- Game Over Buttons (Initially Hidden) -->
				<StackPanel
					x:Name="GameOverButtons"
					Orientation="Horizontal"
					HorizontalAlignment="Center"
					Visibility="Collapsed"
					Margin="0,20,0,0">
					<Button
						x:Name="TryAgainButton"
						Content="TRY AGAIN"
						Width="150"
						Height="50"
						Background="#4CAF50"
						Foreground="White"
						FontSize="16"
						FontWeight="Bold"
						Margin="0,0,10,0"
						Click="TryAgain_Click" />
					<Button
						x:Name="BackToMenuFromGameButton"
						Content="BACK TO MENU"
						Width="150"
						Height="50"
						Background="#FF5722"
						Foreground="White"
						FontSize="16"
						FontWeight="Bold"
						Margin="10,0,0,0"
						Click="BackToMenuFromGame_Click" />
				</StackPanel>
				<Button
					x:Name="BackToMenuFromPlay"
					Content="BACK TO MENU"
					Width="200"
					Height="50"
					Background="#FF333333"
					Foreground="White"
					FontSize="16"
					FontWeight="Bold"
					Click="BackToMenu_Click"
				Style="{StaticResource BackButtonStyle}" />
			</StackPanel>
		</Grid>
		<!-- Settings Panel -->
		<Grid
			x:Name="SettingsPanel"
			Visibility="Collapsed">
			<Grid.Background>
				<ImageBrush
					ImageSource="pack://application:,,,/images/setttings.jpg"
					Stretch="UniformToFill" />
			</Grid.Background>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center">
				<TextBlock
					Text="SETTINGS"
					FontSize="40"
					FontWeight="Bold"
					Foreground="White"
					HorizontalAlignment="Center"
					Margin="0,0,0,50" />
				<Border
					Background="#b80505"
					CornerRadius="10"
					Padding="20"
					Margin="0,0,0,30">
					<StackPanel>
						<TextBlock
							Text="Difficulty"
							FontSize="20"
							Foreground="White"
							Margin="0,0,0,10" />
						<ComboBox
							x:Name="DifficultyComboBox"
							Width="200"
							Height="40"
							FontSize="16">
							<ComboBoxItem
								Content="Easy"
								IsSelected="True" />
							<ComboBoxItem
								Content="Medium" />
							<ComboBoxItem
								Content="Hard" />
						</ComboBox>
					</StackPanel>
				</Border>
				<Border
					Background="#b80505"
					CornerRadius="10"
					Padding="20"
					Margin="0,0,0,30">
					<StackPanel>
						<TextBlock
							Text="Sound Effects"
							FontSize="20"
							Foreground="White"
							Margin="0,0,0,10" />
						<StackPanel Orientation="Horizontal">
							<CheckBox
								x:Name="SoundCheckBox"
								IsChecked="True"
								FontSize="16"
								Foreground="White"
								VerticalAlignment="Center"
								Margin="0,0,10,0" />
							<TextBlock
								Text="Enable Sound"
								FontSize="16"
								Foreground="White"
								VerticalAlignment="Center" />
						</StackPanel>
					</StackPanel>
				</Border>
				<Button
					x:Name="BackToMenuFromSettings"
					Content="BACK TO MENU"
					Width="200"
					Height="50"
					Background="#4f0000"
					BorderBrush="#8a0000"
					Foreground="White"
					FontSize="16"
					FontWeight="Bold"
					Click="BackToMenu_Click"
				Style="{StaticResource BackButtonStyle}" />
			</StackPanel>
		</Grid>
		<!-- Help Panel -->
		<Grid
			x:Name="HelpPanel"
			Visibility="Collapsed">
			<Grid.Background>
				<SolidColorBrush Color="#b80505" />
			</Grid.Background>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Width="800">
				<TextBlock
					Text="HOW TO PLAY"
					FontSize="40"
					FontWeight="Bold"
					Foreground="White"
					HorizontalAlignment="Center"
					Margin="0,0,0,30" />
				<Border
					Background="#ff3838"
					CornerRadius="10"
					Padding="20"
					Margin="0,0,0,30">
					<StackPanel>
						<TextBlock
							Text="🎯 OBJECTIVE"
							FontSize="24"
							FontWeight="Bold"
							Foreground="White"
							Margin="0,0,0,10" />
						<TextBlock
							Text="Test your luck by cutting the correct wire to defuse the bomb!"
							FontSize="16"
							Foreground="White"
							TextWrapping="Wrap"
							Margin="0,0,0,20" />
						<TextBlock
							Text="🎮 GAMEPLAY"
							FontSize="24"
							FontWeight="Bold"
							Foreground="White"
							Margin="0,0,0,10" />
						<TextBlock
							Text="• You have 5 attempts to find the correct wire"
							FontSize="16"
							Foreground="White"
							Margin="0,0,0,5" />
						<TextBlock
							Text="• Click on any wire to cut it"
							FontSize="16"
							Foreground="White"
							Margin="0,0,0,5" />
						<TextBlock
							Text="• One wire is randomly selected as the bomb wire"
							FontSize="16"
							Foreground="White"
							Margin="0,0,0,5" />
						<TextBlock
							Text="• Cut the wrong wire and the bomb explodes!"
							FontSize="16"
							Foreground="White"
							Margin="0,0,0,20" />
						<TextBlock
							Text="🏆 WINNING"
							FontSize="24"
							FontWeight="Bold"
							Foreground="White"
							Margin="0,0,0,10" />
						<TextBlock
							Text="Find the correct wire before running out of attempts to win!"
							FontSize="16"
							Foreground="White"
							TextWrapping="Wrap" />
					</StackPanel>
				</Border>
				<Button
					x:Name="BackToMenuFromHelp"
					Content="BACK TO MENU"
					Width="200"
					Height="50"
					Background="#b80505"
					BorderBrush="#ff3838"
					Foreground="White"
					FontSize="16"
					FontWeight="Bold"
					Click="BackToMenu_Click"
				Style="{StaticResource BackButtonStyle}" />
			</StackPanel>
		</Grid>
		<!-- About Panel -->
		<Grid
			x:Name="AboutPanel"
			Visibility="Collapsed">
			<Grid.Background>
				<SolidColorBrush Color="#4f0000" />
			</Grid.Background>
			<StackPanel
				HorizontalAlignment="Center"
				VerticalAlignment="Center"
				Width="800">
				<TextBlock
					Text="ABOUT"
					FontSize="40"
					FontWeight="Bold"
					Foreground="White"
					HorizontalAlignment="Center"
					Margin="0,0,0,30" />
				<Border
					Background="#8a0000"
					CornerRadius="10"
					Padding="20"
					Margin="0,0,0,30">
					<StackPanel>
						<TextBlock
							Text="💣 BOMB DEFUSAL GAME"
							FontSize="24"
							FontWeight="Bold"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,20" />
						<TextBlock
							Text="Version: 1.0"
							FontSize="16"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,10" />
						<TextBlock
							Text="Created by: Jonna Bohol"
							FontSize="16"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,20" />
						<TextBlock
							Text="A thrilling game of luck and nerve where every decision counts!"
							FontSize="16"
							Foreground="White"
							TextWrapping="Wrap"
							HorizontalAlignment="Center"
							Margin="0,0,0,20" />
						<TextBlock
							Text="🎮 Features:"
							FontSize="18"
							FontWeight="Bold"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,10" />
						<TextBlock
							Text="• Random bomb wire placement"
							FontSize="14"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,5" />
						<TextBlock
							Text="• 5 trial attempts per game"
							FontSize="14"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,5" />
						<TextBlock
							Text="• Modern UI design"
							FontSize="14"
							Foreground="White"
							HorizontalAlignment="Center"
							Margin="0,0,0,5" />
						<TextBlock
							Text="• Multiple difficulty settings"
